<Patch>

    <Operation Class="PatchOperationFindMod">
        <mods>
            <li>Expanded Materials - Metals</li>
            <li>[LITE]Expanded Materials - Metals</li>
        </mods>
        <match Class="PatchOperationSequence">
            <operations>
                <li Class="PatchOperationReplace">
                    <xpath>/Defs/RecipeDef [defName = "EM_Make_RepairKit"]/ingredients</xpath>
                    <value>
                        <ingredients>
                            <li>
                                <filter>
                                    <thingDefs>
                                        <li>Steel</li>
                                    </thingDefs>
                                </filter>
                                <count>3</count>
                            </li>
                            <li>
                                <filter>
                                    <thingDefs>
                                        <li>VMEu_Tin</li>
                                    </thingDefs>
                                </filter>
                                <count>0.5</count>
                            </li>
                        </ingredients>
                    </value>
                </li>
                <li Class="PatchOperationReplace">
                    <xpath>/Defs/RecipeDef [defName = "EM_Make_RepairKit_Bulk"]/ingredients</xpath>
                    <value>
                        <ingredients>
                            <li>
                                <filter>
                                    <thingDefs>
                                        <li>Steel</li>
                                    </thingDefs>
                                </filter>
                                <count>12</count>
                            </li>
                            <li>
                                <filter>
                                    <thingDefs>
                                        <li>VMEu_Tin</li>
                                    </thingDefs>
                                </filter>
                                <count>1.5</count>
                            </li>
                        </ingredients>
                    </value>
                </li>
            </operations>
        </match>
    </Operation>

</Patch>